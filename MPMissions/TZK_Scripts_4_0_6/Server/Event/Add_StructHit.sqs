; args: [object, si, cost]

_object = _this select 0
_si = _this select 1
_cost = _this select 2
_this = 0

; calc score
_score = _cost * 0.001
_score = _score - (_score % 1)
? _cost > 0 && _score < 1: _score = 1

_event = format [{[_this, %1, %2] exec localize {TZK_EVENT_HIT_STRUCT}}, _si, _score]

_object addEventHandler ["hit", _event]